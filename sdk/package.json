{
  "name": "@drain-protocol/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for DRAIN Protocol - Trustless AI micropayments",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
